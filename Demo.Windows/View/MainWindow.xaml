<Window x:Class="Demo.Windows.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Leen.Windows.Controls;assembly=Leen.Windows.Controls"
        xmlns:mvvm="clr-namespace:Leen.Practices.Mvvm;assembly=Leen.Practices.Mvvm"
        Title="MainWindow"
        Width="525"
        Height="350"
        mvvm:ViewLocator.IsRegistered="True"
        mvvm:ViewModelLocator.AutoWireViewModel="True">
    <Window.Resources>

        <Style x:Key="DoubleUpDownStyle1" TargetType="{x:Type controls:DoubleUpDown}">
            <Setter Property="SmallChange" Value="1" />
            <Setter Property="LargeChange" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:DoubleUpDown}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Opacity="{TemplateBinding Opacity}">
                            <Grid Margin="{TemplateBinding Padding}" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBox x:Name="PART_INPUT"
                                         Grid.RowSpan="2"
                                         Grid.Column="0"
                                         VerticalContentAlignment="Center"
                                         Background="{TemplateBinding Background}"
                                         Foreground="{TemplateBinding Foreground}"
                                         TextAlignment="Left" />
                                <RepeatButton x:Name="PART_UP"
                                              Grid.Row="0"
                                              Grid.Column="1"
                                              Command="{x:Static controls:NumericUpDown.IncreaseSmall}"
                                              Content="△" />
                                <RepeatButton x:Name="PART_DOWN"
                                              Grid.Row="1"
                                              Grid.Column="1"
                                              Command="{x:Static controls:NumericUpDown.DecreaseSmall}"
                                              Content="▽" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <controls:MultipleStateControl Width="138"
                                       Height="126"
                                       Margin="196,93,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       State="{Binding State}"
                                       StateConverter="{Binding Mode=OneWay, Source={StaticResource StateToBrushConverter}}"
                                       Style="{DynamicResource MultipeStateControlStyle}" />
        <controls:SearchBox Width="230"
                            Margin="96,52,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center"
                            CornerRadius="10"
                            Text="123456"
                            TextWrapping="Wrap"
                            WatermarkText="搜索组织机构、设备、用户" />
        <controls:DoubleUpDown Width="130"
                               Margin="53,93,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               LargeChange="10"
                               Maximum="10000"
                               Minimum="0"
                               SmallChange="1"
                               StringFormat="N2"
                               Style="{DynamicResource DoubleUpDownStyle1}" />
        <Button Width="75"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding ShowTingCrawlerCommand}"
                Content="爬虫1" />
        <Button Width="75"
                Margin="108,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding ShowNgaCrawlerCommand}"
                Content="爬虫2" />
    </Grid>
</Window>
